# Set default values for all following accounts.
defaults
auth           plain
tls            on
tls_trust_file /etc/ssl/cert.pem
tls_starttls	 off
logfile        ~/.msmtp.log

# Fastmail
account        default
host           smtp.fastmail.com
port					 465
user					 alejandro@aroman.sh
from           alejandro@aroman.sh
protocol			 smtp
passwordeval   "cat ~/.creds/personal.pass"
